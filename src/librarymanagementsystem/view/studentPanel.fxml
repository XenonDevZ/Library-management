<?xml version="1.0" encoding="UTF-8"?>

<?import com.jfoenix.controls.JFXButton?>
<?import de.jensd.fx.glyphs.fontawesome.FontAwesomeIconView?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.Font?>

<BorderPane fx:id="borderpane" prefHeight="651.0" prefWidth="1141.0" style="-fx-border-color: #2b579a;" stylesheets="@../css/main.css" xmlns:fx="http://javafx.com/fxml" xmlns="http://javafx.com/javafx/8.0.171" fx:controller="librarymanagementsystem.controller.studentPanelController">
    <left>
        <VBox fx:id="homeButtonsPanel" maxWidth="221.0" minWidth="140.0" prefHeight="649.0" prefWidth="221.0" BorderPane.alignment="CENTER">
            <children>
                <JFXButton fx:id="back" contentDisplay="GRAPHIC_ONLY" onAction="#logout" prefHeight="43.0" prefWidth="43.0" ripplerFill="#2b579a" style="-fx-border-color: #ffffff; -fx-border-radius: 2000; -fx-border-width: 2;">
                    <VBox.margin>
                        <Insets left="20.0" top="10.0" />
                    </VBox.margin>
                    <graphic>
                        <FontAwesomeIconView fill="WHITE" glyphName="SIGN_OUT" rotate="180.0" size="25" />
                    </graphic>
                </JFXButton>
                <JFXButton fx:id="home" alignment="TOP_LEFT" onAction="#loadHomePanel" prefHeight="40.0" prefWidth="222.0" text="Home" textAlignment="JUSTIFY" textFill="WHITE">
                    <font>
                        <Font size="16.0" />
                    </font>
                    <VBox.margin>
                        <Insets left="1.0" right="1.0" top="20.0" />
                    </VBox.margin>
                </JFXButton>
                <JFXButton fx:id="books" alignment="TOP_LEFT" onAction="#loadBooksPanel" prefHeight="40.0" prefWidth="224.0" text="My Books" textFill="WHITE">
                    <font>
                        <Font size="16.0" />
                    </font>
                    <VBox.margin>
                        <Insets left="1.0" right="1.0" />
                    </VBox.margin>
                </JFXButton>
                <JFXButton fx:id="fines" alignment="TOP_LEFT" onAction="#loadFinesPanel" prefHeight="40.0" prefWidth="227.0" text="Fines" textFill="WHITE">
                    <font>
                        <Font size="16.0" />
                    </font>
                </JFXButton>
                <JFXButton fx:id="notifications" alignment="TOP_LEFT" onAction="#loadNotificationsPanel" prefHeight="40.0" prefWidth="226.0" text="Notifications" textFill="WHITE">
                    <font>
                        <Font size="16.0" />
                    </font>
                </JFXButton>
                <JFXButton fx:id="profile" alignment="TOP_LEFT" onAction="#loadProfilePanel" prefHeight="40.0" prefWidth="228.0" text="Profile" textAlignment="JUSTIFY" textFill="WHITE">
                    <font>
                        <Font size="16.0" />
                    </font>
                    <VBox.margin>
                        <Insets left="1.0" right="1.0" />
                    </VBox.margin>
                </JFXButton>
                <JFXButton fx:id="close" alignment="TOP_LEFT" onAction="#closeApp" prefHeight="40.0" prefWidth="232.0" text="Close" textAlignment="JUSTIFY" textFill="WHITE">
                    <font>
                        <Font size="16.0" />
                    </font>
                    <VBox.margin>
                        <Insets left="1.0" right="1.0" />
                    </VBox.margin>
                </JFXButton>
            </children>
        </VBox>
    </left>
    <center>
        <AnchorPane prefHeight="651.0" prefWidth="920.0">
            <children>
                <Label text="Student Dashboard" layoutX="30" layoutY="20" style="-fx-font-size: 24px; -fx-font-weight: bold;"/>
                <TabPane fx:id="studentTabPane" layoutX="30" layoutY="60" prefWidth="850" prefHeight="550">
                    <tabs>
                        <Tab text="My Books">
                            <TableView fx:id="booksTable" prefHeight="400" prefWidth="800">
                                <columns>
                                    <TableColumn text="Book ID" fx:id="colBookId"/>
                                    <TableColumn text="Book Name" fx:id="colBookName"/>
                                    <TableColumn text="Borrowed Date" fx:id="colBorrowedDate"/>
                                    <TableColumn text="Due Date" fx:id="colDueDate"/>
                                </columns>
                            </TableView>
                        </Tab>
                        <Tab text="Fines">
                            <TableView fx:id="finesTable" prefHeight="400" prefWidth="800">
                                <columns>
                                    <TableColumn text="Book Name" fx:id="colFineBookName"/>
                                    <TableColumn text="Amount" fx:id="colFineAmount"/>
                                    <TableColumn text="Status" fx:id="colFineStatus"/>
                                </columns>
                            </TableView>
                        </Tab>
                        <Tab text="Notifications">
                            <ListView fx:id="notificationsList" prefHeight="400" prefWidth="800"/>
                        </Tab>
                        <Tab text="Profile">
                            <AnchorPane>
                                <children>
                                    <Label text="Name:" layoutX="20" layoutY="30"/>
                                    <Label fx:id="studentName" layoutX="100" layoutY="30"/>
                                    <Label text="Email:" layoutX="20" layoutY="70"/>
                                    <Label fx:id="studentEmail" layoutX="100" layoutY="70"/>
                                </children>
                            </AnchorPane>
                        </Tab>
                    </tabs>
                </TabPane>
            </children>
        </AnchorPane>
    </center>
</BorderPane>
